<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="95dp"
            android:layout_height="95dp"
            app:srcCompat="@drawable/xianchashezhi_big" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout3_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="距离观测"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativelayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView32"
            android:layout_toLeftOf="@+id/editText_dushucha"
            android:layout_toStartOf="@+id/editText_dushucha"
            android:text="读数互差："
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_dushucha"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textView32"
            android:layout_toStartOf="@+id/textView32"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:ems="10"
            android:inputType="number"
            android:text="5"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            tools:gravity="center" />

        <TextView
            android:id="@+id/textView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText_dushucha"
            android:layout_alignBottom="@+id/editText_dushucha"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:text="毫米"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout3"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView37"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText_cehuicha"
            android:layout_alignBottom="@+id/editText_cehuicha"
            android:layout_toLeftOf="@+id/editText_cehuicha"
            android:layout_toStartOf="@+id/editText_cehuicha"
            android:text="测回平均值互差："
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_cehuicha"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textView36"
            android:layout_toStartOf="@+id/textView36"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:ems="10"
            android:inputType="number"
            android:text="10"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            tools:gravity="center" />

        <TextView
            android:id="@+id/textView36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText_cehuicha"
            android:layout_alignBottom="@+id/editText_cehuicha"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:text="毫米"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/button_queding_setting"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@color/colorPrimary"
        android:text="确定"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_qingchu_common"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:text="清除"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/imageButton_houtui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:background="#00000000"
        app:srcCompat="@drawable/houtui" />

</LinearLayout>
