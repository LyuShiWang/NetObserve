<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="95dp"
            android:layout_height="95dp"
            app:srcCompat="@drawable/qixiangshezhi_big" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/textView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText_air_pressure"
            android:layout_alignBottom="@+id/editText_air_pressure"
            android:layout_toLeftOf="@+id/editText_air_pressure"
            android:layout_toStartOf="@+id/editText_air_pressure"
            android:text="气压："
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_air_pressure"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textView34"
            android:layout_toStartOf="@+id/textView34"
            android:background="@drawable/textview_border"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:text="1013" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText_air_pressure"
            android:layout_alignBottom="@+id/editText_air_pressure"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:text="hPa"
            android:textSize="18sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout2"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/textView39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText_dry_tempe"
            android:layout_alignBottom="@+id/editText_dry_tempe"
            android:layout_toLeftOf="@+id/editText_dry_tempe"
            android:layout_toStartOf="@+id/editText_dry_tempe"
            android:text="干温："
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_dry_tempe"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textView40"
            android:layout_toStartOf="@+id/textView40"
            android:background="@drawable/textview_border"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:text="12" />

        <TextView
            android:id="@+id/textView40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText_dry_tempe"
            android:layout_alignBottom="@+id/editText_dry_tempe"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="55dp"
            android:text="℃"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout3"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/textView41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText_wet_tempe"
            android:layout_alignBottom="@+id/editText_wet_tempe"
            android:layout_toLeftOf="@+id/editText_wet_tempe"
            android:layout_toStartOf="@+id/editText_wet_tempe"
            android:text="湿温："
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_wet_tempe"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textView42"
            android:layout_toStartOf="@+id/textView42"
            android:background="@drawable/textview_border"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:text="8.6" />

        <TextView
            android:id="@+id/textView42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText_wet_tempe"
            android:layout_alignBottom="@+id/editText_wet_tempe"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="55dp"
            android:text="℃"
            android:textSize="18sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/relativeLayout4">

        <TextView
            android:id="@+id/textView43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText_weather_quality"
            android:layout_alignBottom="@+id/editText_weather_quality"
            android:layout_toLeftOf="@+id/editText_weather_quality"
            android:layout_toStartOf="@+id/editText_weather_quality"
            android:text="天气状况："
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_weather_quality"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textView44"
            android:layout_toStartOf="@+id/textView44"
            android:background="@drawable/textview_border"
            android:ems="10"
            android:gravity="center"
            android:inputType="text"
            android:text="Fine" />

        <TextView
            android:id="@+id/textView44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="℃"
            android:textSize="18sp"
            android:layout_marginRight="55dp"
            android:layout_alignBaseline="@+id/editText_weather_quality"
            android:layout_alignBottom="@+id/editText_weather_quality"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <Button
        android:id="@+id/button_queding_setting"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/relativeLayout5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@color/colorPrimary"
        android:text="确定" />

    <Button
        android:id="@+id/button_qingchu_common"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/button_queding_setting"
        android:layout_alignStart="@+id/button_queding_setting"
        android:layout_below="@+id/button_queding_setting"
        android:background="@color/colorPrimary"
        android:text="清除" />

    <ImageButton
        android:id="@+id/imageButton_houtui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_qingchu_common"
        android:layout_marginLeft="30dp"
        android:background="#00000000"
        app:srcCompat="@drawable/houtui" />

</RelativeLayout>
