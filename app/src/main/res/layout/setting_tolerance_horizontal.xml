<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/xianchashezhi_big" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="水平角设置"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <RelativeLayout
        android:id="@+id/relativeLayout1_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView14">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/editText_point_name"
            android:layout_toStartOf="@+id/editText_point_name"
            android:text="两次照准读数差："
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_point_name"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@+id/textView17"
            android:layout_toStartOf="@+id/textView17"
            android:background="@drawable/textview_border"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:text="2"
            android:textColor="@android:color/background_light"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:text="秒"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout1_1"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText_bancehui"
            android:layout_alignBottom="@+id/editText_bancehui"
            android:layout_toLeftOf="@+id/editText_bancehui"
            android:layout_toStartOf="@+id/editText_bancehui"
            android:text="半测回归零差："
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_bancehui"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textView20"
            android:layout_toStartOf="@+id/textView20"
            android:background="@drawable/textview_border"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:text="6"
            android:textColor="@android:color/background_light"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText_bancehui"
            android:layout_alignBottom="@+id/editText_bancehui"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:text="秒"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/relativeLayout1_2"
        android:id="@+id/relativeLayout1_3">

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText_yicehui"
            android:layout_alignBottom="@+id/editText_yicehui"
            android:layout_toLeftOf="@+id/editText_yicehui"
            android:layout_toStartOf="@+id/editText_yicehui"
            android:text="一测回2C互差："
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_yicehui"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textView22"
            android:layout_toStartOf="@+id/textView22"
            android:background="@drawable/textview_border"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:text="9"
            android:textColor="@android:color/background_light"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText_yicehui"
            android:layout_alignBottom="@+id/editText_yicehui"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:text="秒"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/relativeLayout1_3"
        android:id="@+id/relativeLayout9">

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText_front_hight"
            android:layout_alignBottom="@+id/editText_front_hight"
            android:layout_toLeftOf="@+id/editText_front_hight"
            android:layout_toStartOf="@+id/editText_front_hight"
            android:text="同方向各测回互差："
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_front_hight"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textView24"
            android:layout_toStartOf="@+id/textView24"
            android:background="@drawable/textview_border"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:text="6"
            android:textColor="@android:color/background_light" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText_front_hight"
            android:layout_alignBottom="@+id/editText_front_hight"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:text="秒"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/imageButton_houtu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_qingchu_common"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:background="#00000000"
        app:srcCompat="@drawable/houtui" />

    <Button
        android:id="@+id/button_queding_setting"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/relativeLayout9"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@color/colorPrimary"
        android:text="确定"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_qingchu_common"
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/button_queding_setting"
        android:layout_alignStart="@+id/button_queding_setting"
        android:layout_below="@+id/button_queding_setting"
        android:background="@color/colorPrimary"
        android:text="清除"
        android:textSize="18sp" />

</RelativeLayout>
