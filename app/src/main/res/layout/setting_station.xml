<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/cezhanshezhi_big" />

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText_observe_number"
            android:layout_alignBottom="@+id/editText_observe_number"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="60dp"
            android:text="测回数："
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_observe_number"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/imageView1"
            android:layout_toEndOf="@+id/textView1"
            android:layout_toRightOf="@+id/textView1"
            android:background="@drawable/textview_border"
            android:ems="10"
            android:gravity="center"
            android:numeric="integer"
            android:text="2"
            android:textColor="@android:color/background_light"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout3_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlayout1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText_observe_number"
            android:layout_alignBottom="@+id/editText_observe_number"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="60dp"
            android:text="测站名："
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_station_name"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/imageView1"
            android:layout_toEndOf="@+id/textView1"
            android:layout_toRightOf="@+id/textView1"
            android:background="@drawable/textview_border"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@android:color/background_light" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlayout3_1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText_observe_number"
            android:layout_alignBottom="@+id/editText_observe_number"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="60dp"
            android:text="分组号："
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_group_number"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/textview_border"
            android:ems="10"
            android:gravity="center"
            android:numeric="integer"
            android:text="1"
            android:inputType="number"
            android:textColor="@android:color/background_light" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlayout3"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText_observe_number"
            android:layout_alignBottom="@+id/editText_observe_number"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="60dp"
            android:text="仪器高："
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_hight"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/textview_border"
            android:ems="10"
            android:gravity="center"
            android:text="0.000"
            android:inputType="number"
            android:textColor="@android:color/background_light" />

        <TextView
            android:id="@+id/textView4_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="m"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearlayout4"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:text="同一方向\n观测次数："
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <RadioGroup
            android:id="@+id/radiogroup_ob_time"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView6"
            android:layout_toRightOf="@+id/textView6"
            android:background="@drawable/textview_border"
            android:gravity="center_vertical"
            android:checked="true"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton_once"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/editText7"
                android:layout_alignBottom="@+id/editText7"
                android:layout_centerHorizontal="true"
                android:text="一次"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radioButton_twice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="二次"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

        </RadioGroup>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearlayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout5"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="观测偏离限差："
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_tolerance"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/textview_border"
            android:ems="10"
            android:gravity="center"
            android:numeric="integer"
            android:text="5"
            android:inputType="number"
            android:textColor="@android:color/background_light" />

        <TextView
            android:id="@+id/textView6_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.06"
            android:text="cm"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton_seting_station"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        app:srcCompat="@drawable/houtui"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="30dp" />

    <Button
        android:id="@+id/button_queding_setting"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        android:text="确定"
        android:layout_below="@+id/linearlayout6"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/button_qingchu_common"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/button_queding_setting"
        android:layout_alignStart="@+id/button_queding_setting"
        android:layout_below="@+id/button_queding_setting"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimary"
        android:text="清除" />

</RelativeLayout>