<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark">


    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/known_point" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativelayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearlayout1"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/textView38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText_point_Z"
            android:layout_alignBottom="@+id/editText_point_Z"
            android:layout_toLeftOf="@+id/editText_point_Z"
            android:layout_toStartOf="@+id/editText_point_Z"
            android:text="Z坐标："
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_point_Z"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:background="@drawable/textview_border"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:layout_marginRight="20dp"
            android:text="0.000"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="点名：  "
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_zhaozhuncha"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/textview_border"
            android:ems="10"
            android:gravity="center"
            android:inputType="text"
            android:text="101"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView26"
            android:layout_toEndOf="@+id/textView26" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativelayout2"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X坐标："
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/editText_point_X"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:background="@drawable/textview_border"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:text="100.00"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView27"
            android:layout_toEndOf="@+id/textView27" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y坐标："
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:layout_alignBaseline="@+id/editText_point_Y"
            android:layout_alignBottom="@+id/editText_point_Y"
            android:layout_toLeftOf="@+id/editText_point_Y"
            android:layout_toStartOf="@+id/editText_point_Y" />

        <EditText
            android:id="@+id/editText_point_Y"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:background="@drawable/textview_border"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:layout_marginRight="20dp"
            android:text="100.00"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativelayout3"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/button_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativelayout4"
            android:layout_marginLeft="30dp"
            android:background="@color/colorPrimary"
            android:text="添加" />

        <Button
            android:id="@+id/button_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp"
            android:background="@color/colorPrimary"
            android:text="清除" />

        <Button
            android:id="@+id/button_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/relativelayout4"
            android:layout_marginRight="30dp"
            android:background="@color/colorPrimary"
            android:text="删除" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/relativelayout4"
        android:layout_marginLeft="3dip"
        android:layout_marginRight="3dip"
        android:layout_marginTop="10dp"
        android:background="@drawable/squre_border"
        android:orientation="vertical"
        android:layout_above="@+id/imageButton_houtu">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#00000000" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_name"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/squre_border"
                android:gravity="center"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:singleLine="true"
                android:text="点名"
                android:textColor="@android:color/background_light"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_X_coor"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/squre_border"
                android:gravity="center"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:singleLine="true"
                android:text="X坐标"
                android:textColor="@android:color/background_light"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_Y_coor"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/squre_border"
                android:gravity="center"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:singleLine="true"
                android:text="Y坐标"
                android:textColor="@android:color/background_light"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_Z_coor"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/squre_border"
                android:gravity="center"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:singleLine="true"
                android:text="Z坐标"
                android:textColor="@android:color/background_light"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#00000000" />

        <ListView
            android:id="@+id/listview_observe_known"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@android:color/transparent"
            android:divider="#B4B3B3"
            android:dividerHeight="0dip"
            android:fadingEdge="none"
            android:scrollbars="vertical"></ListView>
    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton_houtu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        app:srcCompat="@drawable/houtui"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/linearLayout6"
        android:layout_alignRight="@+id/linearLayout6"
        android:layout_alignTop="@+id/imageButton_houtu"
        android:background="@color/colorPrimary"
        android:text="完成" />

</RelativeLayout>