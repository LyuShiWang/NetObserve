<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/linearlayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/observe_big" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativelayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearlayout1"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/editText_point_name"
                android:layout_alignBottom="@+id/editText_point_name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:text="测站点："
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editText_point_name"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView26"
                android:layout_toRightOf="@+id/textView26"
                android:background="@drawable/textview_border"
                android:ems="10"
                android:gravity="center"
                android:text="01"
                android:textColor="@android:color/background_light"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView45"
                android:layout_alignBottom="@+id/textView45"
                android:layout_toLeftOf="@+id/editText_station_hight"
                android:layout_toStartOf="@+id/editText_station_hight"
                android:text="测站高："
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editText_station_hight"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/textView45"
                android:layout_toStartOf="@+id/textView45"
                android:background="@drawable/textview_border"
                android:ems="10"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text="1" />

            <TextView
                android:id="@+id/textView45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/editText_point_name"
                android:layout_alignBottom="@+id/editText_point_name"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="m"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativelayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/linearLayout6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignStart="@+id/linearLayout6"
            android:layout_below="@+id/relativelayout2"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView49"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="照准点名："
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <RelativeLayout
                android:id="@+id/relativeLayout2_1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/textView49"
                android:layout_toRightOf="@+id/textView49"
                android:background="@drawable/textview_border">

                <TextView
                    android:id="@+id/textView51"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:text="后"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView52"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView51"
                    android:layout_alignBottom="@+id/textView51"
                    android:layout_toLeftOf="@+id/editText_front_name"
                    android:layout_toStartOf="@+id/editText_front_name"
                    android:text="前"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editText_back_name"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/textView51"
                    android:layout_toRightOf="@+id/textView51"
                    android:background="@drawable/textview_border"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="11"
                    android:textColor="@android:color/background_light"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editText_front_name"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/textview_border"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="02"
                    android:textColor="@android:color/background_light"
                    android:textSize="20sp" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativelayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativelayout3"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="目标高："
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <RelativeLayout
                android:id="@+id/relativeLayout3_1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/textView29"
                android:layout_toRightOf="@+id/textView29"
                android:background="@drawable/textview_border">

                <TextView
                    android:id="@+id/textView46"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:text="后"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView47"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView28"
                    android:layout_alignBottom="@+id/textView28"
                    android:layout_toLeftOf="@+id/editText_front_hight"
                    android:layout_toStartOf="@+id/editText_front_hight"
                    android:text="前"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editText_back_hight"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/textView46"
                    android:layout_toRightOf="@+id/textView46"
                    android:background="@drawable/textview_border"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="0.000"
                    android:textColor="@android:color/background_light"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView48"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/editText_back_hight"
                    android:layout_alignBottom="@+id/editText_back_hight"
                    android:layout_toEndOf="@+id/editText_back_hight"
                    android:layout_toRightOf="@+id/editText_back_hight"
                    android:text="m"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editText_front_hight"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_alignBottom="@+id/editText_back_hight"
                    android:layout_toLeftOf="@+id/textView28"
                    android:layout_toStartOf="@+id/textView28"
                    android:background="@drawable/textview_border"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="0.000"
                    android:textColor="@android:color/background_light"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView46"
                    android:layout_alignBottom="@+id/textView46"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:text="m"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativelayout5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativelayout4"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/button_observe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:background="@color/colorPrimary"
                android:text="测量" />

            <Button
                android:id="@+id/button_next_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="下一点"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageButton_houtu"
            android:layout_below="@+id/relativelayout5"
            android:layout_marginLeft="3dip"
            android:layout_marginRight="3dip"
            android:layout_marginTop="10dp"
            android:background="@drawable/squre_border"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#00000000" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/squre_border"
                    android:gravity="center"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip"
                    android:singleLine="true"
                    android:text="照准点"
                    android:textColor="@android:color/background_light"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:background="#00000000" />

                <TextView
                    android:id="@+id/text_observe_number"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/squre_border"
                    android:gravity="center"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip"
                    android:singleLine="true"
                    android:text="测回"
                    android:textColor="@android:color/background_light"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:background="#00000000" />

                <TextView
                    android:id="@+id/text_face_position"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/squre_border"
                    android:gravity="center"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip"
                    android:singleLine="true"
                    android:text="左/右"
                    android:textColor="@android:color/background_light"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:background="#00000000" />

                <TextView
                    android:id="@+id/text_Hz"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/squre_border"
                    android:gravity="center"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip"
                    android:singleLine="true"
                    android:text="Hz"
                    android:textColor="@android:color/background_light"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:background="#00000000" />

                <TextView
                    android:id="@+id/text_V"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/squre_border"
                    android:gravity="center"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip"
                    android:singleLine="true"
                    android:text="V"
                    android:textColor="@android:color/background_light"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:background="#00000000" />

                <TextView
                    android:id="@+id/text_S"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.75"
                    android:background="@drawable/squre_border"
                    android:gravity="center"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip"
                    android:singleLine="true"
                    android:text="S"
                    android:textColor="@android:color/background_light"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#00000000" />

            <ListView
                android:id="@+id/listview_observe_now"
                android:layout_width="fill_parent"
                android:layout_height="160dp"
                android:cacheColorHint="@android:color/transparent"
                android:divider="#B4B3B3"
                android:dividerHeight="0dip"
                android:fadingEdge="none"
                android:scrollbars="vertical"></ListView>
        </LinearLayout>

        <ImageButton
            android:id="@+id/imageButton_houtui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout6"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="#00000000"
            app:srcCompat="@drawable/houtui" />

        <Button
            android:id="@+id/button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/linearLayout6"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/linearLayout6"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/colorPrimary"
            android:text="保存" />

        <Button
            android:id="@+id/button_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout6"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimary"
            android:text="检查" />

    </RelativeLayout>
</ScrollView>